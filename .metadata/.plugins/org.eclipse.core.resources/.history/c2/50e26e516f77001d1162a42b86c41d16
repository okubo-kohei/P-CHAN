$(function(){
  $('#sources').change(function () {
    //選択したoptionのvalueを取得
    var val = $(this).val();
    //先頭に#を付けてvalueの値をidに変換
    var optionId = '#' + val;
    //一度すべてのブロックを非表示にする
    $('#initial').hide();
    $('#name').hide();
    $('#maker').hide();
    $('#price').hide();
    //選択したブロックのみを表示
    $(optionId).show();
  });
});

